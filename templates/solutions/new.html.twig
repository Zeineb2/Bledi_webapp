{# templates/solutions/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}New Solution{% endblock %}

{% block body %}
    <div class="container">
        <h1>New Solution</h1>
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.descriptionSol, 'Description') }}
                    {{ form_widget(form.descriptionSol, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.datedSol, 'Start Date') }}
                    {{ form_widget(form.datedSol, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.datefSol, 'End Date') }}
                    {{ form_widget(form.datefSol, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.etatSol, 'State') }}
                    {{ form_widget(form.etatSol, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.budgetSol, 'Budget') }}
                    {{ form_widget(form.budgetSol, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.idRec, 'Reclamation ID') }}
                    {{ form_widget(form.idRec, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(form) }}
                <a href="{{ path('app_solutions_index') }}" class="btn btn-secondary mt-3">Back to List</a>
            </div>
        </div>
    </div>
{% endblock %}
