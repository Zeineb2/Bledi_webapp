{% extends 'base_front.html.twig' %}

{% block title %}Idee{% endblock %}

{% block body %}
    <div class="container">
        <h1>Idee</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>IdIdee</th>
                <td>{{ idee.idIdee }}</td>
            </tr>
            <tr>
                <th>TypeIdee</th>
                <td>{{ idee.typeIdee }}</td>
            </tr>
            <tr>
                <th>DescriptionIdee</th>
                <td id="description">{{ idee.descriptionIdee }}</td>
            </tr>
            <tr>
                <th>ImageIdee</th>
                <td>{{ idee.imageIdee }}</td>
            </tr>
            </tbody>
        </table>

        <div class="btn-group ml-auto">
            <a href="{{ path('app_idee_index') }}" class="btn btn-secondary"><span class="mdi mdi-arrow-left"></span></a>
            <a href="{{ path('app_idee_edit', {'idIdee': idee.idIdee}) }}" class="btn btn-primary">Edit</a>
            {{ include('idee/_delete_form.html.twig') }}
        </div>
    </div>

    <!-- Include ResponsiveVoice script -->
    <script src="https://code.responsivevoice.org/responsivevoice.js"></script>

    <script>
        // Function to read the description
        function readDescription() {
            var description = document.getElementById('description').innerText;
            responsiveVoice.speak(description);
        }

        // Read the description when the page loads
        window.onload = function() {
            readDescription();
        };
    </script>
{% endblock %}
