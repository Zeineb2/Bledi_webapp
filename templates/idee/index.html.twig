{% extends 'base.html.twig' %}

{% block title %}Bledi Idees{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Style for table rows on hover */
        table tbody tr:hover {
            background-color: #f5f5f5; /* Change background color on hover */
            cursor: pointer; /* Change cursor to pointer on hover */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Data table</h4>
            <div class="row mb-3">
                <div class="col-sm-12 col-md-6">
                    <div id="order-listing_filter" class="dataTables_filter">
                        <input type="search" class="form-control" id="searchInput" placeholder="Search">
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 text-right">
                    <a href="{{ path('app_idee_new') }}" class="btn btn-primary">Create New</a>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="order-listing" class="table">
                            <thead>
                            <tr>
                                <th>IdIdee</th>
                                <th>TypeIdee</th>
                                <th>DescriptionIdee</th>
                                <th>ImageIdee</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for idee in idees %}
                                <tr class="idee-row" data-url="{{ path('app_idee_show', {'idIdee': idee.idIdee}) }}">
                                    <td>{{ idee.idIdee }}</td>
                                    <td>{{ idee.typeIdee }}</td>
                                    <td>{{ idee.descriptionIdee }}</td>
                                    <td>{{ idee.imageIdee }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">No records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const rows = document.querySelectorAll('.idee-row');

            // Function to handle row double-click
            function handleRowDoubleClick() {
                const url = this.dataset.url;
                window.location.href = url;
            }

            // Add event listener for double-click to each row
            rows.forEach(row => {
                row.addEventListener('dblclick', handleRowDoubleClick);
            });

            // Add event listener for keyup event on the search input
            searchInput.addEventListener('keyup', function (event) {
                const searchTerm = event.target.value.trim().toLowerCase();

                rows.forEach(row => {
                    let found = false;
                    row.querySelectorAll('td').forEach(cell => {
                        const textContent = cell.textContent.trim().toLowerCase();
                        if (textContent.includes(searchTerm)) {
                            found = true;
                        }
                    });

                    if (found) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    </script>

{% endblock %}
