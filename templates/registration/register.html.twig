{% extends 'regisbase.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_errors(registrationForm) }}
        

        <div class="form-group">
            {{ form_label(registrationForm.email, 'Email') }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email', 'required': 'required'}}) }}
        </div>
        <div class="form-group">
            
                {{ form_label(registrationForm.nom, 'Nom') }}
                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom', 'required': 'required'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe', 'required': 'required'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.tel, 'Telephone') }}
            {{ form_widget(registrationForm.tel, {'attr': {'class': 'form-control', 'placeholder': 'tel', 'required': 'required'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.adresse, 'adresse') }}
            {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control', 'placeholder': 'adresse', 'required': 'required'}}) }}
        </div>

        <div class="form-group">
            <label class="form-check-label">
                {{ form_widget(registrationForm.agreeTerms, {'required': 'required'}) }} I accept the <a href="{{ path('app_login') }}">Terms of Use</a> &amp; <a href="#">Privacy Policy</a>
            </label>
        </div>

        <button type="submit" class="btn btn-success btn-lg btn-block">Enregistrer</button>
    {{ form_end(registrationForm) }}
{% endblock %}